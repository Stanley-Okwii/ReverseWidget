<?xml version="1.0" encoding="utf-8" ?>
<widget id="Transplace.widget.Transplace" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Transplace</name>
    <description>This widget captures input from the user as a string, and inverts the string</description>

    <icon />

    <properties>
        <property key="backgroundColor" type="attribute" required="false">
            <caption>Background Color</caption>
            <category>Appearance</category>
            <description>The background color of the widget.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
             <property key="StudentData" type="attribute" entityProperty="nameProperty" required="true">
            <caption>Data to retrieve</caption>
            <category>Data values</category>
            <description>The context data for the object</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>     
             <property key="nameProperty" type="entity" required="false">
            <caption>Name property</caption>
            <category>Student values</category>
            <description>This is the entity property</description>
        </property>
             <property key="MicroflowToRun" type="microflow" required="true" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on click.</description>
            <returnType type="Boolean" />
        </property>
    </properties>
</widget>

